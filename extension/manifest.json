{
  "manifest_version": 3,
  "name": "NodeSense",
  "version": "0.1.0",
  "description": "Track browsing activity and extract page content.",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "sidePanel",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel-dist/index.html"
  },
  "action": {
    "default_title": "NodeSense"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}